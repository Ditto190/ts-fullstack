{
  "name": "@app/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint:check": "eslint 'src/**/*.ts' --max-warnings=0",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-coverage": "type-coverage --at-least 95 --strict --detail --ignore-files '**/*.test.ts'"
  },
  "dependencies": {
    "@app/db": "workspace:*",
    "@app/shared": "workspace:*",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.2.0",
    "fastify": "^5.2.0",
    "ioredis": "^5.4.2",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.25.7"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "tsx": "^4.19.2",
    "type-coverage": "^2.29.7",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
