{
  "name": "@adaptiveworx/ts-fullstack",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.10.3",
  "workspaces": [
    "apps/*",
    "packages/*",
    "envs/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:api": "yarn workspace @adaptiveworx/api dev",
    "dev:web": "yarn workspace @adaptiveworx/web dev",
    "dev:agent": "yarn workspace @adaptiveworx/agent dev",
    "build": "turbo run build",
    "type-check": "turbo run type-check",
    "lint:check": "turbo run lint:check",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch --parallel",
    "test:coverage": "turbo run test:coverage",
    "db:push": "yarn workspace @adaptiveworx/db push",
    "db:reset": "yarn workspace @adaptiveworx/db reset",
    "db:seed": "yarn workspace @adaptiveworx/db seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "feature:sync": "tsx scripts/feature-sync.ts",
    "feature:validate": "tsx scripts/feature-validate.ts",
    "feature:search": "tsx scripts/feature-search.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@tsconfig/strictest": "^2.0.6",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "type-coverage": "^2.29.7",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@infisical/sdk": "^4.0.6",
    "zod": "^3.25.7"
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.0.0"
  }
}
